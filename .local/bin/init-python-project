#!/bin/bash

# Check if project name was passed in
if [ -z "$1" ]; then
  echo "Usage: $0 <project-directory>"
  exit 1
fi

PROJECT_DIR="$1"
mkdir -p "$PROJECT_DIR"
cd "$PROJECT_DIR" || exit

# Create virtual environment
python3 -m venv venv

# Setup direnv
echo "source venv/bin/activate" > .envrc
direnv allow

echo "âœ… Python project initialized in $PROJECT_DIR"
